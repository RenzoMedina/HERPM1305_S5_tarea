<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaleKpi">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/kpitoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        app:title="@string/title_kpi"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/text_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalle de ventas"
        android:layout_marginTop="@dimen/mg_md"
        android:textSize="@dimen/tx_lg"
        app:layout_constraintTop_toBottomOf="@+id/kpitoolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        />

    <com.echo.holographlibrary.BarGraph
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="@dimen/mg_md"
        app:layout_constraintTop_toBottomOf="@+id/text_sale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>