<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".BestEmployee">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/employeetoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        app:title="@string/title_best_employee"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_nice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡¡¡Felicitaciones!!!"
        android:layout_marginTop="@dimen/mg_lg"
        android:textSize="@dimen/tx_xl"
        app:layout_constraintTop_toBottomOf="@+id/employeetoolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="@dimen/mg_md"
        android:src="@drawable/avatar_man"
        app:layout_constraintTop_toBottomOf="@+id/txt_nice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        />
    <Button
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mg_md"
        android:text="Tomar foto"
        app:layout_constraintTop_toBottomOf="@+id/photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/save"
        tools:ignore="MissingConstraints"
        />
    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mg_md"
        android:text="Guardar foto"
        app:layout_constraintTop_toBottomOf="@+id/photo"
        app:layout_constraintStart_toEndOf="@+id/camera"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        />
    <TextView
        android:id="@+id/txt_mounth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MES FEBRERO"
        android:layout_marginTop="@dimen/mg_sm"
        android:textSize="@dimen/tx_lg"
        app:layout_constraintTop_toBottomOf="@+id/camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        />
</androidx.constraintlayout.widget.ConstraintLayout>