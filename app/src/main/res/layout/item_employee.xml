<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagenview"
        android:layout_width="120dp"
        android:layout_height="127dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginStart="@dimen/mg_sm"
        android:layout_marginTop="@dimen/mg_sm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        />
    <TextView
        android:id="@+id/nameemployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del empleado"
        android:layout_marginTop="@dimen/mg_sm"
        android:layout_marginStart="@dimen/mg_sm"
        android:layout_marginEnd="@dimen/mg_sm"
        android:textSize="@dimen/tx_md"
        app:layout_constraintStart_toEndOf="@+id/imagenview"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        />
    <TextView
        android:id="@+id/cargoemployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargo en el area"
        android:layout_marginTop="@dimen/mg_sm"
        android:layout_marginStart="@dimen/mg_sm"
        android:layout_marginEnd="@dimen/mg_sm"
        android:textSize="@dimen/tx_sm"
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@+id/imagenview"
        app:layout_constraintTop_toBottomOf="@+id/nameemployee"
        tools:ignore="MissingConstraints"
        />


    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mg_sm"
        android:layout_marginTop="@dimen/mg_sm"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@+id/imagenview"
        app:layout_constraintTop_toBottomOf="@+id/cargoemployee"
        app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
        tools:ignore="MissingConstraints"
        app:tint="@color/danger" />

</androidx.constraintlayout.widget.ConstraintLayout>